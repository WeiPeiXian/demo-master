<!--pages/history/history.wxml-->
<view class="container flex-wrap flex-direction-row">
  <view class="flex-row" style=";display: flex;flex-direction: row;">
    <view class="section flex-view-item">
      <picker bindchange="bindPickerChange1" value="{{index1}}" range="{{array1}}">
        <view class="picker">{{array1[index1]}}</view>
      </picker>
    </view>
    <view class="section flex-view-item">
      <picker bindchange="bindPickerChange2" value="{{index2}}" range="{{array2}}">
        <view class="picker">{{array2[index2]}}</view>
      </picker>
    </view>
    <view class="section flex-view-item">
      <picker bindchange="bindPickerChange3" value="{{index3}}" range="{{array3}}">
        <view class="picker">{{array3[index3]}}</view>
    </picker>
    </view>
  </view>
  	<view class="top flex-item ">
		<block wx:for="{{studentlist}}">
			<view class="lieBiao flex-wrap flex-direction-row" >
				<view class="flex-item">
					<view class='firstPart'>{{studentlist[index].name}}</view>
          <view class='secondPart'>
          <text style='color:grey'>{{studentlist[index].attentionType}}</text>
          </view>
          <view class='thirdPart'>{{studentlist[index].destoryingTime}}</view>
				</view>
				
			</view>
		</block>

	</view>
</view>
