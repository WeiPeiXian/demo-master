.navbar{ 
 flex: none; 
 display: flex;
 background: #fff;
 color: black;
} 
.navbar .item1{ 
 position: relative; 
 flex: auto; 
 text-align: center; 
 line-height: 80rpx; 
} 
.navbar .item1.active{ 
 color: #FFCC00; 
} 
.navbar .item1.active:after{ 
 content: ""; 
 display: block; 
 position: absolute; 
 bottom: 0; 
 left: 0; 
 right: 0; 
 height: 4rpx; 
 background: #FFCC00; 
}
