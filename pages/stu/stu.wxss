/**index.wxss**/

.swiper-tab {
  line-height: 80rpx;
  border: 1px solid #ccc;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.swiper-tab-list {
  font-size: 30rpx;
  color: #777;
  text-align: center;
}

.active {
  color: #da7c0c;
  border-bottom: 5rpx solid #da7c0c;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.swiper-box view {
  text-align: center;
}

image {
  width: 100%;
}

.now{
  left: 0;
  height: 75%;
  width: 22%;
  font-size: 70%;
  margin-top: 10rpx;
}
.xiugai{
  right: 0;
  height: 75%;
  width: 22%;
  font-size: 70%;
  margin-top: 10rpx;
}
.nav{
  height: 100rpx;
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
  background-color: greenyellow;
  display: flex;
  flex-direction: row;
}

.btn{
  display: flex;
  flex-direction: row;
  position: relative;
  float: left;
  height: 80rpx;
  width: 200rpx;
  margin: 20rpx;
  background-color: #f2f2f2;
  justify-content:center;
}